<paper-header-panel mode="standard" class="flex">
    <div class="mainContent">
        <iron-image src="https://storage.googleapis.com/audiotroupe/AT-Logo.png"></iron-image>
        <h1 span style="padding-bottom:10px">Let's get you started!</h1>
        <p>Sign up using &nbsp;
            <a href="/auth/facebook" class="waves-effect waves-light btn-large blue darken-2">
                <span class="fa fa-facebook"></span> Facebook</a>
        </p>
        <div class="divider" style="width:200px">
            <hr>
        </div>
        or
        <div>
            <% if (message.length > 0) { %>
            <div data-alert class="alert-box info round" style="background-color:#f04124; font-size:16px">
                <%= message %>
            </div>
            <% } %>
        </div>
        <form method="POST" action="/signUpUser" class="col s12">
            <div class="card-panel grey lighten-5" style="margin-left: 15%; margin-right: 15%;">
                <div class="basicTile">
                    <br>
                    <div class="row">

                        <div class="row">
                            <div class="input-field col s12">
                                <input id="firstName" name="firstName" type="text" class="validate" required="required">
                                <label for="firstName">First Name</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="lastName" name="lastName" type="text" class="validate" required="required">
                                <label for="lastName">Last Name</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="email" name="email" type="text" class="validate" required="required">
                                <label for="email">Email</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="password" name="password" type="password" class="validate"
                                       required="required">
                                <label for="password">Password</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <div class="g-recaptcha centered" style="width:300px; margin:0 auto;" data-callback="onHuman"
                 data-sitekey="6Lcj-xETAAAAAIDuYihkhc1Ta3iSGlLiGDkzDPbS"></div>
            <br/>
            <button class="btn waves-effect waves-light blue" type="submit" name="action">Sign Up!
                <i class="material-icons right">send</i>
            </button>

        </form>
        <br>
        <br>
        <p style="font-size:15px "> Already have an account? (<a href="/signin ">Sign in!</a>) </p>
    </div>
</paper-header-panel>
​

</html>
