        ​
        function onHuman( response )
        {
            $.ajax( {
                url: "checkRecaptcha?captcha=" + response,
                method: "GET"
            } ).done( function ( result )
            {
                if ( JSON.parse( result ).status==="true" )
                {
                    $( "#signupBtn" ).fadeIn( 100 );
                }
            } );
        }
    </script>
